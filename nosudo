if [ $# = 0 ]
then
	echo "Error: sudo requires an argument"
	exit 1
fi

PS1=":" # for .bashrc files which test this var
if [ -e "$HOME/.bashrc" ]; then
	. $HOME/.bashrc 1>/dev/null 2>/dev/null
fi

function f() {
	for arg in $@
	do
		if [ "$arg" == "-l" ]; then
			echo "(ALL) ALL"
			exit 0
		elif alias | grep "alias $arg='" 1>/dev/null 2>/dev/null; then
			cmd="$(alias | grep "alias $arg='" | sed -e "s/.*='\(.*\)'/\1/")"
			shift
			cmd+=" $@"
			su -m -c "cd \"$d\"; $cmd;"
			r=$?
			break
		elif which "$arg" 1>/dev/null 2>/dev/null; then
			cmd="$@"
			su -m -c "cd \"$d\"; $cmd;"
			r=$?
			break
		fi
		shift
	done
}

d="$(pwd)"
r=""
f $@

[ "$r" = "" ] && echo "Error: no valid command found in the arguments" && exit 1

# Retry on wrong password
[ $r -eq 125 ] && f $@; exit $r
